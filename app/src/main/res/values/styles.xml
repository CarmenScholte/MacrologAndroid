<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/assistant_light</item>

        <!-- All buttons, unless style is defined on xml -->
        <item name="buttonStyle">@style/buttonRound</item>

        <item name="alertDialogTheme">@style/alertDialogTheme</item>

        <!-- Color selected item -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:fontFamily">@font/assistant_light</item>
    </style>

    <style name="bottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">12sp</item>
    </style>

    <!--https://medium.com/fw-engineering/textinputlayout-proper-theming-dde422e86c43-->
    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <!--hint color-->
        <item name="android:textColorHint">@color/white</item>
        <!--input text color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--underline unfocussed-->
        <item name="colorControlNormal">@color/white</item>
        <!--everything focussed-->
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TextInputError" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSignal</item>
    </style>

    <style name="TextInputLayoutThemeDark" parent="Widget.Design.TextInputLayout">
        <!--hint color-->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <!--input text color-->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <!--underline unfocussed-->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!--everything focussed-->
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="alertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="buttonStyle">@style/alertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/alertDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/alertDialogButtonStyle</item>
    </style>

    <style name="alertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="buttonRound" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_transparent_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_transparent_textcolor</item>
    </style>

    <style name="buttonBack" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="buttonGradient" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_gradient_background</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>

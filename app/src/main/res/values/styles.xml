<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/assistant_light</item>

        <!--All buttons unless style is defined on xml-->
        <item name="buttonStyle">@style/buttonRound</item>

        <!--color selected item-->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
    </style>

    <style name="bottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextTheme" parent="TextAppearance.AppCompat">
        <!--color of hint when field focussed-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextHintTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="buttonRound" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonBack" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="buttonGradient" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_gradient_background</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>




</resources>

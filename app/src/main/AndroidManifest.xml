<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.csl.macrologandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:fullBackupContent="false"
        tools:targetApi="n">
        <activity
            android:name="com.csl.macrologandroid.DeleteAccountActivity"
            android:label="@string/title_activity_delete_account"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.csl.macrologandroid.ForgotPasswordActivity" />
        <activity android:name="com.csl.macrologandroid.AddFoodActivity" />
        <activity
            android:name="com.csl.macrologandroid.SplashscreenActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.csl.macrologandroid.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csl.macrologandroid.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csl.macrologandroid.EditPersonalDetailsActivity"
            android:label="@string/title_edit_details"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csl.macrologandroid.AdjustIntakeActivity"
            android:label="@string/title_adjust_intake"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csl.macrologandroid.ChangePasswordActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csl.macrologandroid.EditLogEntryActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csl.macrologandroid.AddLogEntryActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.csl.macrologandroid.AboutActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.csl.macrologandroid.WeightChartActivity" />

        <receiver
            android:name="com.csl.macrologandroid.notifications.NotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="NOTIFICATION_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.csl.macrologandroid.notifications.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.csl.macrologandroid.services.HealthcheckService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.csl.macrologandroid.services.UserService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.csl.macrologandroid.services.LogEntryService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.csl.macrologandroid.services.FoodService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.csl.macrologandroid.services.AuthenticationService"
            android:enabled="true"
            android:exported="false" />
        <service android:name="com.csl.macrologandroid.services.WeightService" />
    </application>

</manifest>